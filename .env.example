# ========================================
# BUA Asset Management - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Option A: Single connection string (recommended)
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://root:password@localhost:3306/bua_assets

# Option B: Individual connection parameters
# (Used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=bua_assets

# ========================================
# SECURITY CONFIGURATION
# ========================================

# JWT Secret for authentication (use a strong random string, min 32 characters)
JWT_SECRET=your_very_long_random_secret_key_minimum_32_characters

# Owner OpenID (for default admin user)
OWNER_OPEN_ID=admin-user-id

# ========================================
# OAUTH CONFIGURATION
# ========================================

# OAuth Server URL (for Manus OAuth integration)
OAUTH_SERVER_URL=http://your-oauth-server-url

# OAuth App ID
VITE_APP_ID=your_app_id

# ========================================
# ANALYTICS CONFIGURATION (Optional)
# ========================================

# Analytics Endpoint (Umami or similar)
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com

# Analytics Website ID
VITE_ANALYTICS_WEBSITE_ID=your_website_id

# ========================================
# OPTIONAL CONFIGURATION
# ========================================

# Node environment
NODE_ENV=development

# API Keys (if using external services)
# BUILT_IN_FORGE_API_URL=
# BUILT_IN_FORGE_API_KEY=

# ========================================
# NOTES
# ========================================
# - Keep this file secret and never commit to version control
# - Database must exist before running migrations
# - Create database with: CREATE DATABASE bua_assets CHARACTER SET utf8mb4;
# - Run migrations with: npm run db:push
# - Seed data with: npm run seed:hierarchy
